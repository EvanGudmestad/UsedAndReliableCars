                        <label for="Model" class="mb-2 block text-sm font-semibold text-gray-700">Model</label>
                        <input type="text" id="Model" name="Model" placeholder="Any Model" class="w-full rounded-lg border-2 border-gray-300 px-4 py-3 outline-none transition focus:border-blue-500" />
                    </div>

                    <!-- Price Min -->
                    <div>
                        <label for="PriceMin" class="mb-2 block text-sm font-semibold text-gray-700">Min Price</label>
                        <input type="number" id="PriceMin" name="PriceMin" placeholder="$0" class="w-full rounded-lg border-2 border-gray-300 px-4 py-3 outline-none transition focus:border-blue-500" />
                    </div>

