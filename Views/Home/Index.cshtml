                        <label for="PriceMax" class="mb-2 block text-sm font-semibold text-gray-700">Max Price</label>
                        <input type="number" id="PriceMax" name="PriceMax" placeholder="Any" class="w-full rounded-lg border-2 border-gray-300 px-4 py-3 outline-none transition focus:border-blue-500" />
                    </div>
                </div>

                <div class="mt-6 flex justify-center gap-4">
                    <button type="submit" class="rounded-lg bg-blue-600 px-12 py-4 text-lg font-bold text-white shadow-lg transition hover:bg-blue-700">
                        Search Inventory
                    </button>
                    <button type="reset" class="rounded-lg bg-gray-300 px-8 py-4 text-lg font-semibold text-gray-700 transition hover:bg-gray-400">
                        Reset
                    </button>
                </div>
            </form>
