@{
    ViewData["Title"] = "Find Your Perfect Car";
}

<!-- Hero Section with Advanced Search -->
<section class="relative bg-cover bg-center min-h-screen flex items-center" style="background-image: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('https://images.unsplash.com/photo-1492144534655-ae79c964c9d7?auto=format&fit=crop&w=1920&q=80');">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 w-full">
        <div class="max-w-md bg-white rounded-2xl shadow-2xl p-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">
                Imagine the possibilities
            </h1>

            <!-- Tabs -->
            <div class="flex border-b border-gray-300 mb-6">
                <button class="px-4 py-3 text-sm font-semibold border-b-4 border-black text-black">
                    Shop cars for sale
                </button>
                <button class="px-4 py-3 text-sm font-medium text-gray-600 hover:text-gray-900">
                    Sell your car
                </button>
            </div>

            <!-- Quick Search -->
            <div class="mb-6">
                <div class="relative">
                    <input type="text" placeholder="Try great deals under $20k" class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <button class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-600 hover:text-gray-900">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Or search by -->
            <div class="text-center mb-4">
                <span class="text-sm font-medium text-gray-700">- Or search by -</span>
            </div>

            <!-- Custom Dropdowns -->
            <form class="space-y-3">
                <!-- New/Used Dropdown -->
                <div class="relative" x-data="{ open: false }">
                    <label class="block text-xs font-medium text-gray-600 mb-1">New/used</label>
                    <button type="button" @@click="open = !open" @@click.away="open = false" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-left flex justify-between items-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <span class="text-gray-900 font-medium" x-text="$el.dataset.selected || 'New'"></span>
                        <svg class="w-5 h-5 text-gray-600 transition-transform" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg overflow-hidden">
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'New & used'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">New & used</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'New & certified'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">New & certified</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'New'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-50 bg-gray-100 text-gray-900 font-semibold">New</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Used'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Used</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Certified'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Certified</button>
                    </div>
                </div>

                <!-- Make Dropdown -->
                <div class="relative" x-data="{ open: false }">
                    <label class="block text-xs font-medium text-gray-600 mb-1">Make</label>
                    <button type="button" @@click="open = !open" @@click.away="open = false" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-left flex justify-between items-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <span class="text-gray-900 font-medium" x-text="$el.dataset.selected || 'Select make'"></span>
                        <svg class="w-5 h-5 text-gray-600 transition-transform" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto">
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Toyota'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Toyota</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Honda'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Honda</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Ford'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Ford</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Chevrolet'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Chevrolet</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Nissan'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Nissan</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'BMW'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">BMW</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Mercedes-Benz'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Mercedes-Benz</button>
                    </div>
                </div>

                <!-- Model Dropdown -->
                <div class="relative" x-data="{ open: false }">
                    <label class="block text-xs font-medium text-gray-600 mb-1">Model</label>
                    <button type="button" @@click="open = !open" @@click.away="open = false" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-left flex justify-between items-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <span class="text-gray-900 font-medium" x-text="$el.dataset.selected || 'Select model'"></span>
                        <svg class="w-5 h-5 text-gray-600 transition-transform" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-y-auto">
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Camry'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Camry</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Accord'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Accord</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'F-150'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">F-150</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Silverado'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Silverado</button>
                        <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Altima'; open = false" class="w-full px-4 py-3 text-left hover:bg-gray-100 text-gray-900">Altima</button>
                    </div>
                </div>

                <!-- Distance and ZIP in a row -->
                <div class="grid grid-cols-2 gap-3">
                    <!-- Distance Dropdown -->
                    <div class="relative" x-data="{ open: false }">
                        <label class="block text-xs font-medium text-gray-600 mb-1">Distance</label>
                        <button type="button" @@click="open = !open" @@click.away="open = false" class="w-full px-3 py-3 bg-white border border-gray-300 rounded-lg text-left flex justify-between items-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <span class="text-gray-900 font-medium text-sm" x-text="$el.dataset.selected || '50 miles'"></span>
                            <svg class="w-4 h-4 text-gray-600 transition-transform" :class="{ 'rotate-180': open }" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div x-show="open" x-transition class="absolute z-10 w-full mt-1 bg-white border border-gray-300 rounded-lg shadow-lg">
                            <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = '10 miles'; open = false" class="w-full px-3 py-2 text-left hover:bg-gray-100 text-gray-900 text-sm">10 miles</button>
                            <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = '25 miles'; open = false" class="w-full px-3 py-2 text-left hover:bg-gray-100 text-gray-900 text-sm">25 miles</button>
                            <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = '50 miles'; open = false" class="w-full px-3 py-2 text-left hover:bg-gray-100 text-gray-900 text-sm">50 miles</button>
                            <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = '100 miles'; open = false" class="w-full px-3 py-2 text-left hover:bg-gray-100 text-gray-900 text-sm">100 miles</button>
                            <button type="button" @@click="$el.closest('.relative').querySelector('button').dataset.selected = 'Nationwide'; open = false" class="w-full px-3 py-2 text-left hover:bg-gray-100 text-gray-900 text-sm">Nationwide</button>
                        </div>
                    </div>

                    <!-- ZIP Code Input -->
                    <div>
                        <label class="block text-xs font-medium text-gray-600 mb-1">ZIP</label>
                        <input type="text" placeholder="63112" maxlength="5" class="w-full px-3 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-900 font-medium">
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="w-full bg-purple-600 hover:bg-purple-700 text-white font-semibold py-4 rounded-lg transition mt-6">
                    Show 423 matches
                </button>
            </form>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-12">Deals near you</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Sample Car Cards -->
            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition">
                <div class="bg-gray-200 h-48 flex items-center justify-center">
                    <span class="text-6xl">🚗</span>
                </div>
                <div class="p-4">
                    <h3 class="font-bold text-lg text-gray-900">2023 Toyota Camry</h3>
                    <p class="text-gray-600 text-sm mb-2">15,000 mi • Silver • Sedan</p>
                    <p class="text-2xl font-bold text-blue-600">$24,995</p>
                </div>
            </div>

            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition">
                <div class="bg-gray-200 h-48 flex items-center justify-center">
                    <span class="text-6xl">🚙</span>
                </div>
                <div class="p-4">
                    <h3 class="font-bold text-lg text-gray-900">2022 Honda Accord</h3>
                    <p class="text-gray-600 text-sm mb-2">28,000 mi • Black • Sedan</p>
                    <p class="text-2xl font-bold text-blue-600">$22,495</p>
                </div>
            </div>

            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition">
                <div class="bg-gray-200 h-48 flex items-center justify-center">
                    <span class="text-6xl">🚐</span>
                </div>
                <div class="p-4">
                    <h3 class="font-bold text-lg text-gray-900">2021 Ford F-150</h3>
                    <p class="text-gray-600 text-sm mb-2">42,000 mi • Red • Truck</p>
                    <p class="text-2xl font-bold text-blue-600">$32,995</p>
                </div>
            </div>
        </div>
    </div>
</section>

